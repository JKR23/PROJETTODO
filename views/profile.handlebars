<div class="profile-container">
    <div class="profile-header">
        <div class="profile-avatar">
            {{initials}}
        </div>
        <h1>Mon Profil</h1>
    </div>
    
    <div class="profile-card">
        <div class="profile-info">
            <div class="info-group">
                <label>Nom d'utilisateur</label>
                <p>{{user.username}}</p>
            </div>
            <div class="info-group">
                <label>Email</label>
                <p>{{user.email}}</p>
            </div>
            <div class="info-group">
                <label>Rôle</label>
                <p>{{#if isAdmin}}Administrateur{{else}}Utilisateur{{/if}}</p>
            </div>
            <div class="info-group">
                <label>Inscrit depuis</label>
                <p>{{user.createdAt}}</p>
            </div>
        </div>
        
        <div class="profile-actions">
            <button class="btn-primary" id="edit-profile">Modifier mon profil</button>
            <button class="btn-secondary" id="change-password">Changer mon mot de passe</button>
        </div>
    </div>
    
    <div class="stats-section">
        <h2>Mes statistiques</h2>
        <div class="stats-cards">
            <div class="stat-card">
                <div class="stat-icon todo-icon">
                    <i class="fas fa-clipboard-list"></i>
                </div>
                <div class="stat-info">
                    <h3>À faire</h3>
                    <p class="stat-count" id="todo-count">0</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon progress-icon">
                    <i class="fas fa-spinner"></i>
                </div>
                <div class="stat-info">
                    <h3>En cours</h3>
                    <p class="stat-count" id="progress-count">0</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon review-icon">
                    <i class="fas fa-search"></i>
                </div>
                <div class="stat-info">
                    <h3>En révision</h3>
                    <p class="stat-count" id="review-count">0</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon done-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="stat-info">
                    <h3>Terminées</h3>
                    <p class="stat-count" id="done-count">0</p>
                </div>
            </div>
        </div>
    </div>
</div>

